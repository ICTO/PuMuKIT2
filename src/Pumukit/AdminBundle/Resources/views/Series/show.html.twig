{% if series is not null %}
  <table style="width:100%">
   <tbody>
   <tr>
    <td style="background-color:transparent" height="53" valign="top" width="15%">
      {% if series.getFirstUrlPic() is not empty %}
        <img src="{{ series.getFirstUrlPic() }}" style="border:3px solid #000000;" height="51" width="60" />
      {% else %}
	<img class="mini" src="/legacy/images/folder.png" style="border:3px solid #000000;" height="51" width="60">
      {% endif %}
    </td>

    <td style="background-color:transparent" valign="top" width="85%">

    <!-- TITLE -->
      <div style="padding-left:5px">
        <a href="#">{{ series.getTitle() }}</a> <br />
    <!-- LINE2 (PLACE) -->
        <strong>{{ series.getLine2() }}</strong><br />
    <!-- DATE -->
        <span style="color:#990000"><strong>{{ series.getPublicDate()|date('d/m/Y') }}</strong></span>
      </div>
    </td>
   </tr>
   </tbody>
  </table>
{% else %}
<p>
  {% trans %}Select any series.{% endtrans %}
</p>
{% endif %}
